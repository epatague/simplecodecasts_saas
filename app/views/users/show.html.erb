<div class="row">
    <div class="col-md-3 text-center">
        <%= image_tag @user.profile.avatar.url %><br/>
    </div>
    
    <div class="col-md-9">
        <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %><br/></h1>
        <h3><span class="job_title_icon"><%= job_title_icon %></span><%= @user.profile.job_title %><br/><h3>
        <div class="well"><%= @user.profile.description %><br/></div>
        
        <% if current_user.plan_id == 2 %>
            <%= @user.profile.phone_number %><br/>
            <%= @user.profile.contact_email %><br/>
        <% end %>
        
    </div>
</div>